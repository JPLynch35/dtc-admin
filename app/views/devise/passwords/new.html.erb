<section class="hero is-fullheight is-danger">
  <div class="hero-body">
    <div class="devise-box">
      <h2 class="title is-2">Forgot Your Password?</h2>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= devise_error_messages! %>
        <div class="field">
          <div class="control has-icons-left has-icons-right">
            <%= f.email_field :email, class: "input is-medium is-info", placeholder: "email" %>
            <span class="icon is-small is-left">
              <i class="fas fa-envelope"></i>
            </span>
          </div>
        </div>
        <%= f.submit "Submit", class: "button is-link is-hovered" %>
      <% end %>
      <br>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</section>
