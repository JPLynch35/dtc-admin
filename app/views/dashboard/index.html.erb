<%-# Nav Bar -%>
<nav class="navbar is-white">
  <%= image_tag "DressTheChild.png", class: "dtc-logo" %>
  <div class="navbar-end">
    <div class="navbar-item">
      <%= link_to t('navbar.sign_out'), destroy_user_session_path, method: :delete, class: "button is-outlined is-danger", id: "sign-out-btn" %>
      <br>
      <%= link_to t('navbar.change_password'), edit_user_registration_path, class: "button is-outlined is-dark" %> 
    </div>
  </div>
</nav>

<%-# Tabs -%>
<div class="tabs is-boxed is-fullwidth">
  <ul>
    <li class="is-active" id="main-tab">
      <a onClick="switchToMain()">
        <span class="icon is-small"><i class="fas fa-hand-holding-usd" aria-hidden="true"></i></span>
        <span><%= t('dashboard.index.tabs.donations') %></span>
      </a>
    </li>
    <li id="contacts-tab">
      <a onClick="switchToContacts()">
        <span class="icon is-small"><i class="fas fa-users" aria-hidden="true"></i></span>
        <span><%= t('dashboard.index.tabs.contacts') %></span>
      </a>
    </li>
    <li id="users-tab">
      <a onClick="switchToUsers()">
        <span class="icon is-small"><i class="fas fa-user-edit" aria-hidden="true"></i></span>
        <span><%= t('dashboard.index.tabs.users') %></span>
      </a>
    </li>
  </ul>
</div>

<%-# Notification PopUp -%>
<% if notice.present? || alert.present? %>
  <div class="notification is-primary">
    <button class="delete"></button>
    <h3><%= alert %></h3>
    <h3><%= notice %></h3>
  </div>
<% end %>

<%-# Circles w/ Analytics -%>
<div class="container" id="main">
  <div class="circles">
    <div class="metric-square">
      <%= t('dashboard.index.analytics.total_donors') %>
      <div class="donors-circle"><%= @presenter.retrieve_total_donors %></div>
    </div>
    <div class="metric-square">
      <%= t('dashboard.index.analytics.total_stripe') %>
      <div class="stripe-circle"><%= number_to_currency(@presenter.retrieve_stripe_subtotal, unit: '$', precision: 0) %></div>
    </div>
    <div class="metric-square">
      <%= t('dashboard.index.analytics.total_raised') %>
      <div class="donations-circle"><%= number_to_currency(@presenter.retrieve_all_total, unit: '$', precision: 0) %></div>
    </div>
    <div class="metric-square">
      <%= t('dashboard.index.analytics.total_check') %>
      <div class="checks-circle"><%= number_to_currency(@presenter.retrieve_check_subtotal, unit: '$', precision: 0) %></div>
    </div>
    <div class="metric-square">
      <%= t('dashboard.index.analytics.total_kids') %>
      <div class="kids-circle"><%= @presenter.calculate_kids_sponsored %></div>
    </div>
  </div>

<%-# Filter by Dates -%>
  <div class="container" id="filter-form">
    <%= form_for '', :method => :get do |f| %>
      <%= f.date_field :start_date, class: 'input is-primary', placeholder: "date", id: "start" %>
      <%= f.date_field :end_date, class: 'input is-primary', placeholder: "date", id: "end" %>
      <%= f.submit t('dashboard.index.date_filter.filter_donations'), class: "button is-inverted is-outlined is-link", id: "filter-btn"%>
    <% end %>
  </div>

<%-# Donations Table -%>
  <div class="container" id="donations-table">
    <table class="table is-fullwidth is-hoverable">
      <thead>
        <tr>
          <th class="has-text-centered"><%= t('dashboard.index.donation_attributes.name') %></th>
          <th class="has-text-centered"><%= t('dashboard.index.donation_attributes.city') %></th>
          <th class="has-text-centered"><%= t('dashboard.index.donation_attributes.state') %></th>
          <th class="has-text-centered"><%= t('dashboard.index.donation_attributes.email') %></th>
          <th class="has-text-centered"><%= t('dashboard.index.donation_attributes.amount') %></th>
          <th class="has-text-centered"><%= t('dashboard.index.donation_attributes.date') %></th>
          <th><%= t('dashboard.index.donation_attributes.type') %></th>
        </tr>
      </thead>
      <tbody>
        <% @presenter.retrieve_all_donations.each do |donation| %>
          <tr>
            <td class="name has-text-centered"><%= donation.name %></td>
            <td class="city has-text-centered"><%= donation.city %></td>
            <td class="state has-text-centered"><%= donation.state %></td>
            <td class="email has-text-centered"><%= donation.email %></td>
            <td class="amount has-text-centered"><%= number_to_currency(donation.amount.to_i / 100.00, unit: '$') %></td>
            <td class="date has-text-centered"><%= donation.date %></td>
            <% if donation.donation_type == "Check" %>
            <td class="delete-donation"><%= donation.donation_type %> <%= link_to donation_path(donation), class:'donation-delete', method: :delete, data: { confirm: t('dashboard.index.donation_crud.confirm_delete') } do %><i class="far fa-trash-alt"></i><% end %></td>
            <% else %>
              <td class="type"><%= donation.donation_type %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

<%-# Add Check/Cash Donation Form -%>
  <div class="container" id="donate-form">
    <p><%= t('dashboard.index.donation_crud.instructions') %></p>
    <%= form_for @presenter.create_new_donation do |f| %>
      <%= f.text_field :name, class: 'input is-primary', placeholder: t('dashboard.index.donation_attributes.name'), id:"name" %>
      <%= f.text_field :city, class: 'input is-primary', placeholder: t('dashboard.index.donation_attributes.city'), id:"city" %>
      <%= f.text_field :state, class: 'input is-primary', placeholder: t('dashboard.index.donation_attributes.state'), id:"state" %>
      <%= f.text_field :email, class: 'input is-primary', placeholder: t('dashboard.index.donation_attributes.email'), id:"email" %>
      <%= f.number_field :amount, class: 'input is-primary', placeholder: t('dashboard.index.donation_attributes.amount'), id:"amount" %>
      <%= f.date_field :date, class: 'input is-primary', placeholder: t('dashboard.index.donation_attributes.date'), id:"date" %>
      <%= f.hidden_field :donation_type, value: 'Check' %>
      <%= f.hidden_field :stripe_id, value: '' %>
      <%= f.submit t('dashboard.index.donation_crud.add'), class: "button is-inverted is-outlined is-link" %>
    <% end %>
  </div>
</div>
<br>
<br>


<%-# Contacts Table -%>
<div class="container is-hidden" id="contacts">
  <div class="container" id="contacts-table">
    <table class="table is-hoverable is-fullwidth">
      <thead>
        <tr>
          <th class="has-text-centered"><%= t('dashboard.index.contact_attributes.name') %></th>
          <th class="has-text-centered"><%= t('dashboard.index.contact_attributes.phone') %></th>
          <th class="has-text-centered"><%= t('dashboard.index.contact_attributes.email') %></th>
          <th class="has-text-centered"><%= t('dashboard.index.contact_attributes.organization') %></th>
          <th class="has-text-centered"><%= t('dashboard.index.contact_attributes.delete') %></th>
        </tr>
      </thead>
      <tbody>
        <% @presenter.retrieve_contacts.each do |contact| %>
          <tr>
            <td class="name has-text-centered"><%= contact.name %></td>
            <td class="phone has-text-centered"><%= contact.phone %></td>
            <td class="email has-text-centered"><%= contact.email %></td>
            <td class="organization has-text-centered"><%= contact.organization %> </td>
            <td class="delete-user has-text-centered"><%= link_to contact_path(contact), class:'contact-delete', method: :delete, data: { confirm: t('dashboard.index.contact_crud.confirm_delete') } do %><i class="far fa-trash-alt"></i><% end %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

<%-# Add Contact Form -%>
  <div class="container" id="contact-form">
    <p><%= t('dashboard.index.contact_crud.instructions') %></p>
    <%= form_for @presenter.create_new_contact do |f| %>
      <%= f.text_field :name, class: 'input is-primary', placeholder: t('dashboard.index.contact_attributes.name'), id:"contact-name" %>
      <%= f.text_field :phone, class: 'input is-primary', placeholder: t('dashboard.index.contact_attributes.phone'), id:"contact-phone" %></br>
      <%= f.text_field :email, class: 'input is-primary', placeholder: t('dashboard.index.contact_attributes.email'), id:"contact-email" %>
      <%= f.text_field :organization, class: 'input is-primary', placeholder: t('dashboard.index.contact_attributes.organization'), id:"contact-organization" %></br>
      <%= f.submit t('dashboard.index.contact_crud.add'), class: "button is-inverted is-outlined is-link" %>
    <% end %>
  </div>
</div>

<%-# User Table -%>
<div class="container is-hidden" id="users">
  <div class="container" id="users-table">
    <% if current_user.admin? %>
    <table class="table is-hoverable is-fullwidth">
      <thead>
        <tr>
          <th class="has-text-centered"><%= t('dashboard.index.user_attributes.created') %></th>
          <th class="has-text-centered"><%= t('dashboard.index.user_attributes.email') %></th>
          <th class="has-text-centered"><%= t('dashboard.index.user_attributes.delete') %></th>
        </tr>
      </thead>
      <tbody>
        <% @presenter.retrieve_users.each do |user| %>
          <tr>
            <td class="has-text-centered"><%= user.created_at.to_date %>
            <td class="has-text-centered"><%= user.email %></td>
            <td class="has-text-centered"><%= link_to user_path(user), class:'user-delete', method: :delete, data: { confirm: t('dashboard.index.user_crud.confirm_delete') } do %><i class="far fa-trash-alt"></i><% end %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

<%-# Add User Form -%>
  <div class="container" id="user-form">
    <p><%= t('dashboard.index.user_crud.instructions') %></p>
    <%= form_for @presenter.create_new_user do |f| %>
      <%= f.text_field :email, class: 'input is-primary', placeholder: t('dashboard.index.user_attributes.email'), id:"user-email" %>
      <%= f.text_field :password, class: 'input is-primary', placeholder: t('dashboard.index.user_attributes.password'), id:"user-password" %></br>
      <%= f.submit t('dashboard.index.user_crud.add'), class: "button is-inverted is-outlined is-link" %>
    <% end %>
  <% else %>
    <p>You do not have access to this page.</p>
  <% end %>
  </div>
</div>

<%-# Scripts for Tabs and Notifications-%>
<script>
  const mainClasses = document.getElementById("main").classList;
  const contactsClasses = document.getElementById("contacts").classList;
  const usersClasses = document.getElementById("users").classList;
  const mainTabClasses = document.getElementById("main-tab").classList;
  const contactsTabClasses = document.getElementById("contacts-tab").classList;
  const usersTabClasses = document.getElementById("users-tab").classList;
  var deleteButtons = document.getElementsByClassName('delete');

  for (var i = 0; i < deleteButtons.length; i++) {
  deleteButtons[i].addEventListener('click', dismiss); 
  };

  function dismiss(e) {
    this.parentNode.classList.add('is-hidden');
  };

  function switchToMain() {
    hideAll();
    mainClasses.add("is-active");
    mainClasses.remove("is-hidden");
    mainTabClasses.add("is-active");
  };

  function switchToContacts() {
    hideAll();
    contactsClasses.add("is-active");
    contactsClasses.remove("is-hidden");
    contactsTabClasses.add("is-active");
  };

  function switchToUsers() {
    hideAll();
    usersClasses.add("is-active");
    usersClasses.remove("is-hidden");
    usersTabClasses.add("is-active");
  };

  function hideAll(){
    mainClasses.add("is-hidden");
    contactsClasses.add("is-hidden");
    usersClasses.add("is-hidden");
    mainTabClasses.remove("is-active");
    contactsTabClasses.remove("is-active");
    usersTabClasses.remove("is-active");
  };
</script>
