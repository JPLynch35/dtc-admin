<nav>
  <h4 id="total-donors">Total Donors: <%= @presenter.retrieve_total_donors %></h4>
  <h4 id="funds-raised">Funds Raised: <%= number_to_currency(@presenter.retrieve_all_total, unit: '$') %></h4>
  <h4 id="kids-sponsored">Kids Sponsored: <%= @presenter.calculate_kids_sponsored %></h4>
  <%= link_to "Change your password", edit_user_registration_path %>
  <%= link_to "Sign Out", destroy_user_session_path, method: :delete %>
</nav>
<h1>Donations</h1>
 <h2>Stripe Donations</h2>
  <% @presenter.retrieve_stripe_donations.each do |donation| %>
    <ul>
      <%= donation.name %>
      <%= donation.city %>
      <%= donation.state %>
      <%= donation.email %>
      <%= number_to_currency(donation.amount.to_i / 100.00, unit: '$') %>
      <%= donation.donation_type %>
      <%= donation.date %>
    </ul>
  <% end %>
  <h4>Sub-Total: <%= number_to_currency(@presenter.retrieve_stripe_subtotal, unit: '$') %></h4>

 <h2>Check Donations</h2>
  <% @presenter.retrieve_check_donations.each do |donation| %>
    <ul>
      <%= donation.name %>
      <%= donation.city %>
      <%= donation.state %>
      <%= donation.email %>
      <%= number_to_currency(donation.amount.to_i / 100.00, unit: '$') %>
      <%= donation.donation_type %>
      <%= donation.date %>
      <%= link_to 'Delete', donation_path(donation), method: :delete, data: { confirm: 'Are you sure you want to delete this donation?' } %> 
    </ul>
  <% end %>
  <h4>Sub-Total: <%= number_to_currency(@presenter.retrieve_check_subtotal, unit: '$') %></h4>

 <h2>Log A Donation</h2>
  <%= form_for @presenter.create_new_donation do |f| %>
   <%= f.label :date %>
  <%= f.date_field :date %>
   <%= f.label :name %>
  <%= f.text_field :name %>
   <%= f.label :email %>
  <%= f.text_field :email %>
   <%= f.label :city %>
  <%= f.text_field :city %>
   <%= f.label :state %>
  <%= f.text_field :state %>
   <%= f.label :amount %>
  <%= f.number_field :amount %>
   <%= f.hidden_field :donation_type, value: 'Check' %>
  <%= f.hidden_field :stripe_id, value: '' %>
  <%= f.submit %>
  <% end %>

<%= form_tag '', :method => :get do %>
  <%= date_field_tag :start_date %>
  <%= date_field_tag :end_date %>
  <%= submit_tag 'Filter' %>
<% end %>
